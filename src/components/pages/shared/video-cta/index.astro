---
import { Image } from "@/components/ui";

interface Props {
  title: string;
  subtitle: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
  buttonText: string;
}

const {
  title = "INTO EXPERIENCES",
  subtitle = "TURNING HOMES",
  description = "Our video tours go beyond simply showing a home—they bring it to life. By highlighting its unique charm and captivating features, we create an immersive experience that truly connects with potential buyers. From spacious living areas to intricate details, every corner is captured with precision and artistry. Let us craft a story that makes your home stand out and drives interest from buyers who are ready to fall in love with it.",
  imageSrc = "/house-image.png",
  imageAlt = "Hermosa casa residencial al atardecer",
  buttonText = "EXPERIENCE THE TOUR",
} = Astro.props;

// Generar IDs únicos para los elementos relacionados
const sectionId = `video-cta-${Math.random().toString(36).substr(2, 9)}`;
const titleId = `${sectionId}-title`;
const descriptionId = `${sectionId}-description`;
---

<section
  class="bg-stone-100 p-4 sm:p-10"
  aria-labelledby={titleId}
  aria-describedby={descriptionId}
>
  <div
    class="grid grid-cols-1 md:grid-cols-[60%_40%] mx-auto md:grid-rows-[700px] max-w-[1920px] w-full"
    role="presentation"
  >
    <div
      class="w-full h-[500px] md:h-full md:border-r-[1rem] md:border-stone-100"
      role="img"
      aria-label={imageAlt}
    >
      <Image
        client:only="react"
        src={imageSrc}
        alt={imageAlt}
        className="w-full h-full object-cover"
        loading="lazy"
      />
    </div>

    <div
      class="w-full bg-stone-800 p-6 md:p-12 flex flex-col justify-center"
      role="region"
      aria-label="Información del tour virtual"
    >
      <p
        class="text-white/80 font-medium text-sm sm:text-lg tracking-[0.15em] uppercase"
        aria-hidden="true"
      >
        {subtitle}
      </p>

      <h2
        id={titleId}
        class="text-white text-3xl sm:text-4xl md:text-5xl font-secondary mt-2 mb-6 uppercase font-bold"
      >
        {title}
      </h2>

      <p
        id={descriptionId}
        class="text-stone-300 text-sm md:text-base leading-relaxed mb-8"
      >
        {description}
