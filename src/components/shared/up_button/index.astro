<button
  id="upButton"
  class="fixed bottom-4 left-4 rounded-full bg-stone-200 z-40 size-10 md:size-16 hover:bg-stone-300 transition-all cursor-pointer flex items-center justify-center opacity-0 invisible transform translate-y-2"
  aria-label="Ir arriba"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="size-4 md:size-6 text-stone-600"
  >
    <path d="m18 15-6-6-6 6"></path>
  </svg>
</button>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const upButton = document.getElementById('upButton');
    
    if (!upButton) return;
    
    function toggleButtonVisibility() {
      const scrollY = window.scrollY;
      const windowHeight = window.innerHeight;
      
      // Mostrar el botón cuando el usuario haya hecho scroll más de una pantalla
      if (scrollY > windowHeight * 0.5) {
        upButton.classList.remove('opacity-0', 'invisible', 'translate-y-2');
        upButton.classList.add('opacity-100', 'visible', 'translate-y-0');
      } else {
        upButton.classList.add('opacity-0', 'invisible', 'translate-y-2');
        upButton.classList.remove('opacity-100', 'visible', 'translate-y-0');
      }
    }
    
    function scrollToTop() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    }
    
    // Escuchar el evento de scroll
    window.addEventListener('scroll', toggleButtonVisibility);
    
    // Agregar funcionalidad de click
    upButton.addEventListener('click', scrollToTop);
    
    // Verificar la posición inicial
    toggleButtonVisibility();
  });
</script>

<style>
  #upButton {
    transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
  }
</style>
