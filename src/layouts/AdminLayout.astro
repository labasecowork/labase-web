---
import "@fontsource-variable/playfair-display";
import Layout from "./Layoutpanel.astro";
import AdminNav from "@/components/ui/AdminNav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <AdminNav />
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <slot />
    </div>
  </main>
</Layout>

