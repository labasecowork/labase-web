---
import { CoreLayout } from "@/layouts";
import { cafesMeta } from "@/config/meta";
import {
  HeroCoffi,
  MenuCoffi,
  CoffiSection,
} from "@/components/pages/arsenal/cafes";
import { InfoSection, CtaSection } from "@/components/pages/shared";
---

<CoreLayout
  title={cafesMeta.title}
  description={cafesMeta.description}
  keywords={cafesMeta.keywords}
  canonical={cafesMeta.canonical}
  type={cafesMeta.type}
>
  <HeroCoffi />
  <InfoSection
    tag="Sabor que Inspira"
    title="Descubre la esencia de cada grano"
    description="En Arsenal, cada café es una experiencia. Seleccionamos los granos más finos y los preparamos con dedicación para ofrecer un aroma y sabor únicos en cada taza."
    image="/images/arsenal/cafes/about.png"
    button1="Explora Nuestro Café"
    button1Href="#menu"
  />

  <CoffiSection />
  <MenuCoffi />
  <CtaSection
    title="Ven y disfruta en nuestro Arsenal"
    description="Descubre nuestros desayunos, cafés, jugos y postres recién preparados. Visítanos y vive la experiencia de sabores únicos en cada sorbo y bocado."
    button="Visítanos Ahora"
    buttonHref="/contactanos"
  />
</CoreLayout>
