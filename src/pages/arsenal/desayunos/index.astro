---
import { CoreLayout } from "@/layouts";
import { desayunosMeta } from "@/config/meta";
import {
  MenuSection,
  ExtrasSection,
} from "@/components/pages/arsenal/desayunos";
import {
  HeroSection,
  CtaSection,
  InfoSection,
} from "@/components/pages/shared";
---

<CoreLayout
  title={desayunosMeta.title}
  description={desayunosMeta.description}
  keywords={desayunosMeta.keywords}
  canonical={desayunosMeta.canonical}
  type={desayunosMeta.type}
>
  <HeroSection
    tag="Comienza tu día con nuestros"
    title="Desayunos"
    description="Descubre el sabor de la frescura en cada bocado. Nuestros desayunos son preparados al momento con los mejores ingredientes."
    image="/images/arsenal/desayunos/hero.png"
    imageClass="size-full object-cover object-bottom"
  />
  <InfoSection
    tag="Comienza tu día con energía"
    title="Desayunos frescos y deliciosos"
    description="En Arsenal, cada desayuno es una experiencia. Preparamos tus platos al momento con ingredientes frescos y de calidad para que cada bocado sea lleno de sabor y vitalidad."
    image="/images/arsenal/desayunos/desayunos/about.png"
    button1="Ver Menú"
    button1Href="#menu"
  />
  <MenuSection />
  <ExtrasSection />
  <CtaSection
    title="Ven y disfruta en nuestro Arsenal"
    description="Descubre nuestros desayunos, cafés, jugos y postres recién preparados. Visítanos y vive la experiencia de sabores únicos en cada sorbo y bocado."
    button="Visítanos Ahora"
    buttonHref="/contactanos"
  />
</CoreLayout>
