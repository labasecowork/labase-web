---
import { CoreLayout } from "@/layouts";
import { jugosMeta } from "@/config/meta/jugos";
import {
  HeroSection,
  InfoSection,
  CtaSection,
} from "@/components/pages/shared";
import { Menus } from "@/components/pages/arsenal/jugos";
---

<CoreLayout
  title={jugosMeta.title}
  description={jugosMeta.description}
  keywords={jugosMeta.keywords}
  canonical={jugosMeta.canonical}
  image={jugosMeta.image}
  type={jugosMeta.type}
>
  <HeroSection
    tag="Comienza tu día con nuestros"
    title="Jugos Naturales"
    description="Descubre el sabor de la frescura en cada sorbo. Nuestros jugos son preparados al momento con las mejores frutas de temporada."
    image="/images/arsenal/jugos/hero.png"
    imageClass="size-full object-cover object-bottom"
  />
  <InfoSection
    tag="Energía Natural"
    title="La frescura en cada sorbo"
    description="En Arsenal, nos enorgullece ofrecer los jugos más frescos y naturales. Cada bebida es preparada al momento con frutas cuidadosamente seleccionadas para garantizar el mejor sabor y calidad."
    image="/images/arsenal/jugos/about.png"
    button1="Ver Menú"
    button1Href="#menu"
  />
  <Menus />
  <CtaSection
    title="Ven y disfruta en nuestro Arsenal"
    description="Descubre nuestros desayunos, cafés, jugos y postres recién preparados. Visítanos y vive la experiencia de sabores únicos en cada sorbo y bocado."
    button="Visítanos Ahora"
    buttonHref="/contactanos"
  />
</CoreLayout>
