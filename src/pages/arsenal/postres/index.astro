---
import { CoreLayout } from "@/layouts";
import { postresMeta } from "@/config/meta/postres";
import {
  HeroSection,
  InfoSection,
  TitleSection,
  CtaSection,
} from "@/components/pages/shared";
import { Menus } from "@/components/pages/arsenal/postres";
---

<CoreLayout
  title={postresMeta.title}
  description={postresMeta.description}
  keywords={postresMeta.keywords}
  canonical={postresMeta.canonical}
  image={postresMeta.image}
  type={postresMeta.type}
>
  <HeroSection
    tag="Disfruta de nuestros"
    title="Postres Artesanales"
    description="Descubre el dulce sabor de la felicidad en cada bocado. Postres artesanales preparados con pasión y los mejores ingredientes."
    image="/images/arsenal/postres/hero.png"
    imageClass="size-full object-cover object-bottom"
  />

  <InfoSection
    tag="Dulces Momentos"
    title="El arte de la repostería"
    description="En Arsenal, cada postre es una obra maestra de sabor. Nuestros maestros pasteleros combinan técnicas tradicionales con toques modernos para crear experiencias únicas que deleitan todos los sentidos."
    image="/images/arsenal/postres/about.png"
    button1="Ver Carta"
    button1Href="#menu"
  />

  <Menus />

  <CtaSection
    title="Ven y disfruta en nuestro Arsenal"
    description="Descubre nuestros desayunos, cafés, jugos y postres recién preparados. Visítanos y vive la experiencia de sabores únicos en cada sorbo y bocado."
    button="Visítanos Ahora"
    buttonHref="/contactanos"
  />
</CoreLayout>
